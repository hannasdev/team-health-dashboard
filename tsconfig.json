{
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "sourceMap": true,
    "declaration": true,
    "checkJs": true,
    "noImplicitAny": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "./node_modules",
    "./dist",
    "jest.config.js",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.mock.ts"
  ]
}
